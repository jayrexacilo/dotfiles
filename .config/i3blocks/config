# Global properties
separator=false
separator_block_width=15

#[bandwidth]
#command=sh ~/.local/bin/bandwidth
#interval=2

[nettraf]
command=sh ~/.local/bin/sb-nettraf
interval=2

[mediaplayer]
command=sh ~/.local/bin/mediaplayer
interval=3

[weather]
command=sh ~/.local/bin/weather
interval=3600
color=#A4C2F4

[cpu_temp]
command=sensors | awk '/temp1/ {print "üå° " substr($2, 2, length($2))}'
interval=10

[cpu]
command=grep 'cpu ' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print "üìü"substr(usage, 1,2) "%"}'
interval=10

[memory]
command=free -h | awk '/Mem/ {print "üíæ "substr($7, 1, length($7)-1)}'
interval=10

[uptime]
command=uptime | awk '{print "üë®‚Äçüíª " substr($3, 1, length($3)-1) }'
interval=60

[battery]
command=sh ~/.local/bin/battery
interval=once
signal=3

[backlight]
command=sh ~/.local/bin/backlight
label=‚òÄ
interval=20
#STEP_SIZE=5
#USE_SUDO=0

[volume]
command=sh ~/.local/bin/volume
interval=once
signal=2

[time]
command=date '+%Y %a %b-%d %I:%M:%S'
interval=1

[internet]
command=sh ~/.local/bin/sb-internet
interval=60

